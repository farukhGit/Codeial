<link rel="stylesheet" href="/css/home.css">

<main>
    <% if(locals.user){%> 
        <h1>
            Welcome to Codeial | <%= locals.user.username %>
        </h1>
        <div id="home-container">
            <section id="feed-posts">
                <h1>Posts</h1>
                <form action="/posts/create" id="new-post-form" method="POST">
                    <textarea name="content" id="new-post-content" cols="30" rows="6" placeholder="Enter Comment" required></textarea>
                    <input type="hidden" name="name" value="<%= locals.user.username %>">
                    <input type="submit" value="Post">
                </form>
                <div id="posts-container">
                    <ul>
                        <% for ( post of posts) {%>
                            <%- include('_post'); %>
                        <%}%>
                    </ul>
                </div>
            </section>
            <section id="user-friends">
                <h3>Friends</h3> <hr>
                <% for ( u of all_users ){%>
                    <p>
                        <img src="<%= u.avatar %>" alt="<%= u.name %>">
                        <a href="/users/profile/<%= u.id %>" style="color:white;">
                            <%= u.username %>
                        </a>
                    </p>
                <% } %>
            </section>
        </div>

    <% }else{%>
        <h1>
            Welcome to Codeial
        </h1>
        <section id="home-default">
            <%- include('signin'); %>
            <%- include('signup'); %> 
        </section>   
    <%} %>
</main>
<script src="/js/home_posts.js"></script>


    